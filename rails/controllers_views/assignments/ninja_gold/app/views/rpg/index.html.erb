<div class="container">
	<h1> Welcome to Ninja Gold! </h1>

	<p> Your Gold: <span class="gold"><%= session[:gold] %></span></p>

		<ul>
			<li>
				<h3> Farm </h3>
				<p> (earns 10-20 golds) </p>
				<form action="/rpg/farm/" method="post">
					<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
					<input type="submit" value="Find Gold!">
				</form>
			</li>
			<li>
				<h3> Cave </h3>
				<p> (earns 5-10 golds) </p>
				<form action="/rpg/cave/" method="post">
					<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden" >
					<input type="submit" value="Find Gold!">
				</form>
			</li>
			<li>
				<h3> House </h3>
				<p> (earns 2-5 golds) </p>
				<form action="/rpg/house/" method="post">
					<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden" >
					<input type="submit" value="Find Gold!">
				</form>
			</li>
			<li>
				<h3> Casino </h3>
				<p> (earns/takes 0-50 golds) </p>
				<form action="/rpg/casino/" method="post">
					<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden" >
					<input type="submit" value="Find Gold!">
				</form>
			</li>
		</ul>

		<div id="activities">
			<p> Activities: </p>
			<div class="activites-area">
				<% @activities.each do |activity| %>
					<p class="<%= activity[:color] %>"> <%= activity[:activity] %></p>
				<% end %>
			</div>
		</div>

		<%= link_to 'Reset', '/rpg/reset' %>
</div>
