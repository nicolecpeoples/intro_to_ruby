<div class="container">
<h1>Products Listing</h1>


	<table>
		<thead>
			<tr>	
				<th> Name </th>
				<th> Description </th>
				<th> Price </th>
				<th> Category</th>
				<th> </th>
			</tr>
		</thead>
		<tbody>
			<% @products.each do |product |%>
			<tr>
				<td><%=  product.name %>  </td>
				<td><%=  product.description %>  </td>
				<td><%=  product.pricing %>  </td>
				<td><%=  product.category.name %>  </td>
				<td><%= link_to 'Show', "/products/#{product.id}" %> |<%= link_to 'Edit', "/products/#{product.id}/edit" %> |<%= link_to 'Delete', "/products/#{product.id}", method: :destroy, data: {confirm: "Are you sure you want to delete this product?" } %>  </td>
			</tr>
			<% end %>
		</tbody>
	</table>

	<%= link_to 'New Product', '/products/new' %>

</div>