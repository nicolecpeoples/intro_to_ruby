<div class="container">
	<h1>New Product</h1>
	<form action="/products" method="post">
		 
		<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" >
		<p> <label for="product[category_id]"> Category:</label> <select name="product[category_id]" class="select_show">
			<option value="" disabled selected>Choose your option</option>
				<% @categories.each do |category| %>
					<option value="<%= category.id %>"><%= category.name %></option>
				<% end %>
			</select>
		</p>
		<p><label for="product[name]"> Name: </label><input type="text" name="product[name]"></p>
		<p><label for="product[description]"> Description: </label><input type="text" name="product[description]"></p>
		<p><label for="product[pricing]"> Price: </label><input type="text" name="product[pricing]"></p>
		<input type="submit" value="Create">
	</form>

	<%= link_to 'Back', '/products' %>
</div>